<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="app.com.example.wagner.meupredi.Cadastro"
    tools:showIn="@layout/activity_cadastro">

    <EditText
        android:id="@+id/edit_text_nome"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Nome"
        android:textAllCaps="false"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="16dp" />

    <EditText
        android:id="@+id/edit_text_idade"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Idade"
        app:layout_constraintTop_toBottomOf="@+id/edit_text_nome"
        tools:layout_editor_absoluteX="8dp" />

    <EditText
        android:id="@+id/edit_text_peso"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Peso"
        app:layout_constraintTop_toBottomOf="@+id/edit_text_idade"
        tools:layout_editor_absoluteX="8dp" />

    <EditText
        android:id="@+id/edit_text_circunferencia"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="CircunferÃªncia"
        app:layout_constraintTop_toBottomOf="@+id/edit_text_peso"
        tools:layout_editor_absoluteX="8dp" />
</android.support.constraint.ConstraintLayout>
